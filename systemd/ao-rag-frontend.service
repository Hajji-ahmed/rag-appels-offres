[Unit]
Description=AO RAG Streamlit Frontend
After=network.target

[Service]
User={...}
WorkingDirectory={...}/rag-appels-offres
ExecStart={...}/rag-appels-offres/venv/bin/streamlit run frontend/streamlit_app.py --server.port 8502 --server.headless true
Restart=always

[Install]
WantedBy=multi-user.target
